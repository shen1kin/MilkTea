<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 统一 TextView 样式：比如诗句、公告通知这些 -->
    <style name="BigCardContainerStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
    </style>

    <!-- 公告通知卡片样式 -->
    <style name="MyCardStyle">
        <item name="android:padding">16dp</item>
        <item name="android:elevation">4dp</item> <!-- 有阴影效果 -->
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- 商品管理列表样式-->
    <style name="tvItemListStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 添加商品标题样式   -->
    <style name="tvProjectTitle">
        <item name="android:gravity">left</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <!--  物品加入购物车详细界面  -->
    <!-- 基础按钮样式 -->
    <!-- res/values/styles.xml -->
    <style name="AttributeButtonStyle" parent="Widget.MaterialComponents.Button">
        <!-- 字体大小 -->
        <item name="android:textSize">14sp</item>
        <!-- 圆角 -->
        <item name="cornerRadius">24dp</item>
        <!-- 边框颜色 -->
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
        <!-- 背景颜色 使用 selector -->
        <item name="backgroundTint">@color/attribute_button_bg</item>
        <!-- 字体颜色 使用 selector -->
        <item name="android:textColor">@color/attribute_button_text</item>
        <!-- 去掉阴影 -->
        <item name="elevation">0dp</item>
    </style>



</resources>